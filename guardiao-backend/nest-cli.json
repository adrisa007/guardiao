{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.build.json",
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "controllerKeyOfComment": "description",
          "dtoKeyOfComment": "description"
        }
      }
    ],
    "assets": [
      {
        "include": "prisma/**/*",
        "watchAssets": true
      },
      {
        "include": "src/mail/templates/**/*",
        "watchAssets": true
      },
      {
        "include": "comprovantes/templates/**/*",
        "watchAssets": true
      }
    ]
  },
  "monorepo": false,
  "root": "src",
  "projects": {},
  "generateOptions": {
    "spec": true
  },
  "language": "ts"
}